<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/fondo003mini"
    android:orientation="vertical"
    tools:context="com.example.agoney.comparaprecios.ActivityInfo">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/textViewAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/semiblanco"
        android:padding="3dp"
        android:text="\n App desarrollada para Android por: \n Agoney Suárez Martín \n"
        android:textAlignment="center"
        android:textColor="@color/negro"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_toLeftOf="@+id/textViewAutor"
        android:layout_toStartOf="@+id/textViewAutor" />

    <TextView
        android:id="@+id/textViewDetalles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAutor"
        android:layout_gravity="center"
        android:background="@color/semiblanco"
        android:padding="3dp"
        android:text="Módulo PGL \n Ciclo Grado Superior \n Desarrollo de aplicaciones multiplataforma\n"
        android:textAlignment="center"
        android:textColor="@color/negro"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_toLeftOf="@+id/textViewDetalles"
        android:layout_toStartOf="@+id/textViewDetalles" />

    <TextView
        android:id="@+id/textViewFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewDetalles"
        android:layout_gravity="center"
        android:background="@color/semiblanco"
        android:padding="3dp"
        android:text="Realizado \n Octubre-Noviembre 2017 \n"
        android:textAlignment="center"
        android:textColor="@color/negro"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_toLeftOf="@+id/textViewFecha"
        android:layout_toStartOf="@+id/textViewFecha" />

    <TextView
        android:id="@+id/textViewVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewFecha"
        android:layout_gravity="center"
        android:background="@color/semiblanco"
        android:padding="10dp"
        android:text="@string/version"
        android:textAlignment="center"
        android:textColor="@color/negro"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>
